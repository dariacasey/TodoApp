<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Dark" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/light_gray</item>
        <item name="colorOnPrimary">@color/dark_gray</item>
        <item name="colorSecondary">@color/dark_purple</item>
        <item name="colorSecondaryVariant">@color/light_purple</item>
        <item name="colorOnSecondary">@color/charcoal</item>
        <item name="android:statusBarColor">@color/dark_blue</item>
        <!-- other attributes -->
    </style>

    <!-- Dark Mode -->
    <style name="Screen">
        <item name="android:background">@color/dark_gray</item>
    </style>
    <style name="Text">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="Button">
        <item name="android:backgroundTint">@color/charcoal</item>
        <item name="android:textColor">@color/white</item>
        <item name="colorOutline">@color/charcoal</item>
    </style>
    <style name="fab">
        <item name="android:backgroundTint">@color/charcoal</item>
    </style>
    <style name="Switch">
        <item name="android:thumbTint">@color/black</item>
        <item name="trackTint">@color/black</item>
    </style>
    <style name="Box">
        <item name="android:buttonTint">@color/black</item>
    </style>
    <style name="Task">
        <item name="android:background">@color/charcoal</item>
        <item name="android:elevation">2dp</item>
    </style>
</resources>